@page "/addEmployee"
@inject GetData data
@inject NavigationManager navigate

<HeaderBackComponent ButtonTitle="Back">Add Employee</HeaderBackComponent>
<FormComponent Data="Employee" Submit="HandleAddEmployee" IsDisabled="false"></FormComponent>

@code {
    public Employee? Employee { get; set; } = new Employee()
    {
            Name = string.Empty,
            Age = 0,
            Dob = DateOnly.FromDateTime(DateTime.Now),
            ID = Guid.NewGuid().GetHashCode(),
            JoinDate = DateTime.Now,
            Position = string.Empty,
            Salary = 0
    };

    public async void HandleAddEmployee(Employee employee)
    {
        data.AddEmployee(employee);
        navigate.NavigateTo("/");
    }
}
