@page "/detailView/{id:int}"
@inject GetData data
@inject NavigationManager navigate


<HeaderBackComponent IsBackAble="true" ButtonTitle="Back">Detail View</HeaderBackComponent>
<FormComponent Data="Employee" Submit="HandleClose" ButtonTitle="Close" IsDisabled="true"></FormComponent>

@code {
    [Parameter]
    public int Id { get; set; }

    public Employee? Employee { get; set; }

    protected override void OnInitialized()
    {
        Employee = data.Employees.Find(p => p.ID == Id);
    }

    public void HandleClose(Employee employee)
    {
        navigate.NavigateTo("/");
    }
}
